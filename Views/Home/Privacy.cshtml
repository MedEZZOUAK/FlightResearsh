@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="container mt-4">
    <h1 class="text-primary">@ViewData["Title"]</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h2>Overview</h2>
            <p>FlightResearch is committed to protecting your privacy. This policy explains how we handle your personal data when you use our flight booking services.</p>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h2>Information We Collect</h2>
            <ul class="list-unstyled">
                <li><i class="fas fa-search text-primary me-2"></i> Search preferences (destinations, dates, class)</li>
                <li><i class="fas fa-user text-primary me-2"></i> Account information (when you register)</li>
                <li><i class="fas fa-credit-card text-primary me-2"></i> Payment details (processed securely)</li>
                <li><i class="fas fa-map-marker-alt text-primary me-2"></i> Location data (with your consent)</li>
                <li><i class="fas fa-cookie-bite text-primary me-2"></i> Cookies and usage data</li>
            </ul>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h2>How We Use Your Data</h2>
            <ul class="list-unstyled">
                <li><i class="fas fa-plane text-primary me-2"></i> Process flight bookings</li>
                <li><i class="fas fa-bell text-primary me-2"></i> Send booking confirmations and updates</li>
                <li><i class="fas fa-chart-line text-primary me-2"></i> Improve our services</li>
                <li><i class="fas fa-shield-alt text-primary me-2"></i> Prevent fraud</li>
            </ul>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h2>Third-Party Services</h2>
            <p>We work with trusted partners to provide our services:</p>
            <ul class="list-unstyled">
                <li><i class="fas fa-plane-departure text-primary me-2"></i> Airlines and booking systems</li>
                <li><i class="fas fa-money-bill text-primary me-2"></i> Payment processors</li>
                <li><i class="fas fa-server text-primary me-2"></i> Cloud service providers</li>
                <li><i class="fas fa-analytics text-primary me-2"></i> Analytics services</li>
            </ul>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h2>Your Rights</h2>
            <ul class="list-unstyled">
                <li><i class="fas fa-eye text-primary me-2"></i> Access your data</li>
                <li><i class="fas fa-edit text-primary me-2"></i> Update your information</li>
                <li><i class="fas fa-trash text-primary me-2"></i> Request deletion</li>
                <li><i class="fas fa-download text-primary me-2"></i> Export your data</li>
            </ul>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h2>Contact Us</h2>
            <p>For privacy inquiries:</p>
            <ul class="list-unstyled">
                <li><i class="fas fa-envelope text-primary me-2"></i> Email: privacy@flightresearch.com</li>
                <li><i class="fas fa-phone text-primary me-2"></i> Phone: +1-555-PRIVACY</li>
                <li><i class="fas fa-shield-alt text-primary me-2"></i> Data Protection Officer: dpo@flightresearch.com</li>
            </ul>
        </div>
    </div>
</div>